  <div class="header-link">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <div>
            <% if (metadata.collegedata.email1 && metadata.collegedata.phone1) { %>
            <span class="pe-2"><strong>Phone: </strong> +91 <%= metadata.collegedata.phone1 %></span>
            <span><strong>Email:</strong><%= metadata.collegedata.email1 %></span>
            <% } %>
        </div>

            <% if (metadata.headerlink && metadata.headerlink.length > 0) { %>
        <div class="link-button">
          <% metadata.headerlink.forEach((item) => { %>
          <span><a href="<%= item.link %>" class="btn btn-rounded btn-sm btn-<%= item.color %>"><%= item.heading %></a></span>
            <% }) %>
        </div>
          <% } %>
      </div>
    </div>
  </div>
  <header class="d-flex flex-start align-items-center py-4 m-0">
    <div class="d-flex justify-content-between align-items-center" style="width: 100%">
      <% if (slider?.collegeheader) { %>
          <img src="/images/official/<%=slider.collegeheader %>" alt="College Logo" class="college-name" />
        <% } %>
      <img src="/assets/testing/amrit.png"class="d-none d-md-block" alt="College Logo">
    </div>
  </header>

  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <button class="navbar-toggler ps-2 pe-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse sm-color" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% if (metadata && metadata.navigationbar && metadata.navigationbar.length > 0) { %>
                <% metadata.navigationbar.forEach((item) => { 
                      if(item.itemtype && item.itemtype == 'dropdown'){ %>
                      <li class="nav-item mx-2 dropdown">
                          <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                              <%= item.text %>
                          </a>
                          <ul class="dropdown-menu mt-2 rounded-0 border border-dark" aria-labelledby="navbarDropdown">
                              <% if(item.dropdown && item.dropdown.length > 0){ %>
                                <% item.dropdown.forEach((nesteditem) => {  %>
                                      
                              <li><a class="dropdown-item" href="/<%= item.href %>/<%= nesteditem.href %>"><%= nesteditem.text %></a></li>

                              <% }) %>
                            <% } %>
                          </ul>
                      </li>
                      
                      <% }else{ %>
                          <li class="nav-item mx-2">
                            <% if(item.href == 'gallery'){ %>
                              <a class="nav-link" aria-current="page" href="/gallery"><%= item.text %></a>
                          </li>
                          <% } else if (item.href == 'home'){  %>
                            <a class="nav-link" aria-current="page" href="/"><%= item.text %></a>
                          <% }else{  %>
                            <a class="nav-link" aria-current="page" href="/<%= item.href %>"><%= item.text %></a>
                          <% } %>
                      <% } %>

                <% }); %>
            <% } %>
        </ul>
      </div>
    </div>
  </nav>
