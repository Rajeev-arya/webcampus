<header class="py-3 text-left ps-4" style="background-color: #e3f2fd;">
    <h2><%= metadata?.collegename %></h2>
    <h5><%= metadata?.collegedata.tagline %></h5>    
</header>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: #37acff;">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">

          <% if (metadata && metadata.navigationbar && metadata.navigationbar.length > 0) { %>
                <% metadata.navigationbar.forEach((item) => { 
                      if(item.itemtype && item.itemtype == 'dropdown'){ %>
                      <li class="nav-item mx-2 dropdown">
                          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                              <%= item.text %>
                          </a>
                          <ul class="dropdown-menu mt-2 rounded-0 border border-dark" aria-labelledby="navbarDropdown">
                              <% if(item.dropdown && item.dropdown.length > 0){ %>
                                <% item.dropdown.forEach((nesteditem) => {  %>
                                      
                              <li><a class="dropdown-item" href="<%= nesteditem.href %>"><%= nesteditem.text %></a></li>

                              <% }) %>
                            <% } %>
                          </ul>
                      </li>
                      
                      <% }else{ %>
                          <li class="nav-item mx-2">
                              <a class="nav-link active" aria-current="page" href="<%= item.href %>"><%= item.text %></a>
                          </li>
                      <% } %>

                <% }); %>
            <% } %>
      </ul>
      </div>
    </div>
  </nav>