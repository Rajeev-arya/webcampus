<div class="container">

    <div class="row mt-4">
        <div class="col-md-5 mb-3">
            <div class="notice-section">
                <div class="header">
                    <h4 class="mb-0 p-1"><i class="fa fa-file-text-o ps-4 px-3"></i>Notice & Updates</h4>
                </div>
                <div class="body p-3">
                    
                    <marquee width="60%" direction="up" height="292px" id="myMarquee">
                    <% if (homedata && homedata.notice && homedata.notice.content && homedata.notice.content.length > 0) { %>
                        <% homedata.notice.content.forEach(function(item) { %>
                            
                            <div class="notice-content d-flex flex-start p-1">
                                <div class="date px-3 py-2">
                                    <h4 class="mb-0 pt-1">05</h4>
                                    <h6 class="mb-0">JUN</h6>
                                </div>
                                <div class="content px-3">
                                    <div>
                                        <p class="mb-0"><%= item.caption %></p>
                                        <a href="/images/notices/<%= item.filepath %>" download="" class="btn btn-sm btn-info btn-round">Download</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                    </marquee>
                </div>
            </div>
        </div>
        <div class="col-md-7 mb-3">
            <div class="important-link-section">
                <div class="header">
                    <h4 class="mb-0 p-1"><i class="fa fa-database px-3 ps-4"></i>Important Links</h4>
                </div>
                <div class="body">

                    <div class="row px-2">
                        <% if (homedata && homedata.importantlink && homedata.importantlink.content && homedata.importantlink.content.length > 0) { %>
                            <% homedata.importantlink.content.forEach(function(item) { %>
                                <div class="col-md-2 col-4 d-flex justify-content-center">
                                    <center>
                                        <a href="<%= item.href %>" class="a-plain" style="text-decoration: none;">
                                            <div class="tab px-3 mx-2 mt-3">
                                                <div class="icon p-1">
                                                    <i class="fa <%= item.faicon %>"></i>
                                                </div>
                                                <p class="text-center pb-2 pt-3"><%= item.heading %></p>
                                            </div>
                                        </a>
                                    </center>
                                </div>
                            <% }); %>
                        <% } %>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

