<!-- Content wrapper -->
<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">

        <h4 class="py-3 mb-3">Widget</h4>

        <div class="col-md-12">
            <!-- Form controls -->
            <div class="card mb-4">
                <h5 class="card-header">Header Link</h5>
                <div class="card-body">
                    <div class="row">

                        <div class="card-body d-flex justify-content-center">
                            <div class="d-flex flex-wrap">
                                <% data.forEach(function(item){ %>


                                    <div class="p-3">
                                        <center>

                                            <div class="border shadow p-4 bg-<%= item['color'] %>" style="width: 60px;height: 60px">
                                            </div>
                                            <p class="mt-3 mb-0">
                                                <%= item['heading'] %>
                                            </p>
                                            <a href="<%= item['href'] %>" class="mt-1">
                                                <%= item['href'] %>
                                            </a>

                                            <div class="mt-2">
                                                <a href="/manager/delete-headerlink/<%= item._id %>"
                                                    class="btn btn-danger btn-sm p-2"><i
                                                        class="fa fa-times-circle pe-2"></i> Delete </a>
                                            </div>
                                    </div>
                                    </center>
                                    <% }); %>
                            </div>
                        </div>

                    </div>


                </div>
            </div>
        </div>

        <div class="col-md-12">

            <!-- Create Important Link -->
            <div class="card mb-4">
                <h5 class="card-header">Create Important Link</h5>
                <div class="card-body">
                    <form action="/manager/add-headerlink" method="post">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-floating form-floating-outline mb-4">
                                    <input type="text" class="form-control" id="color" placeholder="info"
                                        name="color" />
                                    <label for="color">Button Color</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating form-floating-outline mb-4">
                                    <input type="text" class="form-control" id="caption" placeholder="Heading"
                                        name="heading" />
                                    <label for="caption">Caption</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating form-floating-outline mb-4">
                                    <input type="text" class="form-control" id="href" name="href"
                                        placeholder="https://google.com" />
                                    <label for="href">Link Path</label>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>

        <div class="col-md-12">

            <!-- Create Important Link -->
            <div class="card mb-4">
                <h5 class="card-header">Select Button Color</h5>
                <div class="card-body d-flex justify-content-center">
                    <div class="row">
                        <div class="col-md-2">
                            <div class="border shadow p-4 bg-primary"></div>
                            <small class="d-flex justify-content-center pt-2">primary</small>
                        </div>
                        <div class="col-md-2">
                            <div class="border shadow p-4 bg-secondary"></div>
                            <small class="d-flex justify-content-center pt-2">secondary</small>
                        </div>
                        <div class="col-md-2">
                            <div class="border shadow p-4 bg-danger"></div>
                            <small class="d-flex justify-content-center pt-2">danger</small>
                        </div>
                        <div class="col-md-2">
                            <div class="border shadow p-4 bg-warning"></div>
                            <small class="d-flex justify-content-center pt-2">warning</small>
                        </div>
                        <div class="col-md-2">
                            <div class="border shadow p-4 bg-info"></div>
                            <small class="d-flex justify-content-center pt-2">info</small>
                        </div>
                        <div class="col-md-2">
                            <div class="border shadow p-4 bg-success"></div>
                            <small class="d-flex justify-content-center pt-2">success</small>
                        </div>

                    </div>
                </div>
            </div>
        </div>



    </div>
</div>